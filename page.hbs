{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
    <header id="site-head" {{#if @blog.cover}}style="background-image: url(/content/images/page_cover.jpg)"{{else}}style="background-image: url({{@blog.cover}}){{/if}}">
        <div class="vertical">
        <div id="site-head-content" class="inner">
    <a id="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="Back to home" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </a>
        <h1 class="blog-title">{{post.title}}</h1>
        <h2 class="blog-description">{{@blog.description}}</h2>
        <a class='btn first'>scroll to page</a>
            <a class='btn' href="{{@blog.url}}">back home</a>
            
         <h4 id="search"></h4>
        <i class="fa fa-tags"></i>  <input class="blog-description" id="search-field" placeholder=" looking for something?"/>
        <span class="blog-description" id="results"></span>
        
            </div>
                </div>
                <a class="scroll-down fa fa-chevron-left" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

<main id="content" class="content" role="main">

<div class='fixed-nav'>
      <a class="social" href="{{@blog.url}}" alt="Back Home"><span class="fa-stack fa-lg">
	<i class="fa fa-square-o fa-stack-2x"></i>
	<i class="fa fa-home fa-stack-1x"></i>
      </span></a>
      <a id="totop-arrow"><span class="fa-stack fa-lg">
	<i class="fa fa-square-o fa-stack-2x"></i>
	<i class="fa fa-angle-up fa-stack-1x"></i>
      </span></a>
    </div>

        <article class="{{post_class}} first">

        {{! Each post has the blog logo at the top, with a link back to the home page }}

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}

		<span class="post-meta"><i class="fa fa-leaf"></i> {{title}} {{#if tags}} <i class="fa fa-tag"></i> {{tags separator=", "}}{{/if}} </span>

        <section class="post-content">
            {{content}}	
        </section>

        {{/post}}

    </article>

</main>
